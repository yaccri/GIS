# MongoDB connection URI (replace YOUR_PASSWORD and specify DB if needed)
MONGODB_URI=mongodb+srv://<your_username>:<your_password>@<your_cluster_address>/<your_database_name>

# JWT Secret Key (generate a strong, unique secret)
JWT_SECRET=replace_with_a_strong_random_secret

# Server Port (optional, defaults to 4000 if not set)
PORT=4000
